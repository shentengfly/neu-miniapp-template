{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "@neuxnet/types",
    ]
  },
  "include": [
    "**/*.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue"
  ],
  "vueCompilerOptions": {
    "nativeTags": ["block", "component", "template", "slot"]
  }
}
